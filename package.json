{
  "name": "voice-ai",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "oxlint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "turbo typecheck",
    "prepublishOnly": "turbo prepublishOnly",
    "clean": "turbo clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "turbo": "^2.5.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.5"
}
