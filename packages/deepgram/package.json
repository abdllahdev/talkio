{
  "name": "@voice-ai/deepgram",
  "version": "0.1.0",
  "description": "Deepgram STT and TTS providers for voice-ai",
  "keywords": [
    "deepgram",
    "speech-to-text",
    "stt",
    "text-to-speech",
    "tts",
    "voice-ai"
  ],
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf node_modules dist .tsbuildinfo coverage"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@voice-ai/tsconfig": "workspace:*",
    "tsdown": "^0.19.0-beta.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "voice-ai": "workspace:*"
  },
  "peerDependencies": {
    "voice-ai": "workspace:*"
  },
  "engines": {
    "node": ">=20"
  }
}
